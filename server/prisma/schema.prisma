generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// Isso garante que s√≥ poderemos usar os valores listados aqui.
enum LinkType {
  LINK
  SOCIAL
  PORTFOLIO
}

model Link {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  type      LinkType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}